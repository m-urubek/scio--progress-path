{
  "name": "progresspath-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Tailwind CSS and TypeScript build configuration for Progress Path",
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./wwwroot/css/app.src.css -o ./wwwroot/css/app.css --minify",
    "watch:css": "npx @tailwindcss/cli -i ./wwwroot/css/app.src.css -o ./wwwroot/css/app.css --watch",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "build": "npm run build:ts && npm run build:css"
  },
  "devDependencies": {
    "tailwindcss": "^4.0.0",
    "@tailwindcss/cli": "^4.0.0",
    "@tailwindcss/postcss": "^4.0.0",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20",
    "typescript": "^5.7.0"
  }
}
